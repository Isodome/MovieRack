                                        <Label Content="Cinema Date:" Height="auto" Width="auto" Name="cinemaDateLabel" FontSize="12" Padding="3" />
                                        <Label Content="-" Height="auto" Name="cinemaDate" Width="auto" FontWeight="Normal" FontSize="12" Padding="3" />
