<UserControl x:Class="WinMovieRack.DetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="1302" d:DesignWidth="2207" xmlns:my="clr-namespace:WinMovieRack.GUI">
    <Grid ShowGridLines="False" Background="#FFF0F0F0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="250"/>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <Image Grid.Column="2" Margin="0,11,12,0" Name="posterTitle" Stretch="Fill" Source="/WinMovieRack;component/Resources/nopicPREVIEW.jpg" HorizontalAlignment="Right" Width="200" Height="276" VerticalAlignment="Top" MouseUp="posterTitle_MouseUp" />
        <GridSplitter Grid.Column="1" Height="auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        <TextBox Text="title" Grid.Column="2" Height="auto" Name="movieTitleLabel" VerticalAlignment="Top" FontSize="35" Margin="60,10,0,0" HorizontalAlignment="Left" Width="auto" FontWeight="Bold" IsEnabled="True" CharacterCasing="Normal" IsReadOnly="True" Background="#FFF0F0F0" BorderBrush="#FFF0F0F0" BorderThickness="0" />
        <Label Content="(year)" FontSize="15" Height="auto" HorizontalAlignment="Left" Margin= "10,26,0,0" Name="yearLabel" VerticalAlignment="Top" Width="auto" Grid.Column="2" />
        <Label Content="Orginal Title" Grid.Column="2" Height="auto" HorizontalAlignment="Left" Margin="60,55,0,0" Name="orgialTitleLabel" VerticalAlignment="Top" FontSize="15" />
        <Label Content="IMDB Rating:" Grid.Column="2" Height="auto" HorizontalAlignment="Left" Margin="10,87,0,0" Name="imdbRatingLabel" VerticalAlignment="Top" FontWeight="Bold" FontSize="15" />
        <Label Content="10/10" Grid.Column="2" Height="auto" HorizontalAlignment="Left" Margin="110,87,0,0" Name="imdbRating" VerticalAlignment="Top" FontSize="15" />
        <Label Content="(999999 Votes)" Grid.Column="2" Height="auto" HorizontalAlignment="Left" Margin="155,87,0,0" Name="imdbVotes" VerticalAlignment="Top" FontSize="15" />
        <Label Content="Top 250:" Grid.Column="2" Height="auto" HorizontalAlignment="Left" Margin="270,87,0,0" Name="top250Label" VerticalAlignment="Top"   Width="auto" FontWeight="Bold" FontSize="15" />
        <Label Content="250" Height="auto" HorizontalAlignment="Left" Margin="340,87,0,0" Name="top250" VerticalAlignment="Top" Grid.Column="2" FontSize="15" />
        <Label Content="Own Rating:" Height="auto" HorizontalAlignment="Left" Margin="10,117,0,0" Name="ownRatingLabel" VerticalAlignment="Top" Grid.Column="2" FontWeight="Bold" FontSize="15" />
        <Label Content="100/100 (10/10)" HorizontalAlignment="Left" Margin="100,117,0,0" Name="ownRating" Grid.Column="2" Height="26" VerticalAlignment="Top" FontSize="15" />
        <Label Content="Genres:" Height="auto" HorizontalAlignment="Left" Margin="220,117,0,0" Name="genresLabel" VerticalAlignment="Top" Grid.Column="2" FontWeight="Bold" FontSize="15" />
        <Label Content="Action | Krimi" Height="auto" HorizontalAlignment="Left" Margin="280,117,0,0" Name="genres" VerticalAlignment="Top" Grid.Column="2" FontSize="15" />
        <Label Content="Metacritics:" Height="auto" HorizontalAlignment="Left" Margin="10,147,0,0" Name="metacriticslabel" VerticalAlignment="Top" Grid.Column="2" FontWeight="Bold" FontSize="15" />
        <Label Content="Rottentomatoes:" Height="auto" HorizontalAlignment="Left" Margin="10,199,0,0" Name="rottentomatoesLabel" VerticalAlignment="Top" Grid.Column="2" FontWeight="Bold" FontSize="15" />
        <Label Content="100%" Height="auto" HorizontalAlignment="Left" Margin="240,197,0,0" Name="rottentomatoesTomatometerRating" VerticalAlignment="Top" Grid.Column="2" FontSize="15" />
        <Label Content="100%" Height="auto" HorizontalAlignment="Left" Margin="215,217,0,0" Name="rottentomatoesAudienceRating" VerticalAlignment="Top" Grid.Column="2" FontSize="15" />
        <Label Content="10/10" Height="auto" HorizontalAlignment="Left" Margin="185,167,0,0" Name="metacriticsUserRating" VerticalAlignment="Top" Grid.Column="2" FontSize="15" />
        <Label Content="Users Score:" Height="auto" HorizontalAlignment="Left" Margin="100,167,0,0" Name="metacriticsUserLabel" VerticalAlignment="Top" Grid.Column="2" FontSize="15" />
        <Label Content="Tomatometer:" Height="auto" HorizontalAlignment="Left" Margin="140,197,0,0" Name="rottentomatoesTomatometerLabel" VerticalAlignment="Top" Grid.Column="2" FontSize="15" />
        <Label Content="100/100" Height="auto" Margin="180,147,0,0" Name="label5" VerticalAlignment="Top" Grid.Column="2" FontSize="15" HorizontalAlignment="Left" Width="auto" />
        <Label Content="Metascore:" FontSize="15" Height="auto" HorizontalAlignment="Left" Margin="100,147,0,0" Name="MetacriticsMetascoreLabel" VerticalAlignment="Top" Grid.Column="2" />
        <Label Content="Audience:" FontSize="15" Height="auto" HorizontalAlignment="Left" Margin="140,217,0,0" Name="RottentomatoesAudienceLabel" VerticalAlignment="Top" Grid.Column="2" />
        <Label Content="(999999 Critics)" FontSize="15" Height="auto" HorizontalAlignment="Left" Margin="240,147,0,0" Name="MetacriticsMetascoreCriticsVotes" VerticalAlignment="Top" Grid.Column="2" />
        <Label Content="(999999 Votes)" FontSize="15" Height="auto" HorizontalAlignment="Left" Margin="240,166,0,0" Name="MetacriticsMetascoreUsersVotes" VerticalAlignment="Top" Grid.Column="2" />
        <Label Content="(999999 Critics)" FontSize="15" Height="auto" HorizontalAlignment="Left" Margin="285,197,0,0" Name="RottentomatoesTomatoemeterVotes" VerticalAlignment="Top" Grid.Column="2" />
        <Label Content="(999999 Votes)" FontSize="15" Height="auto" HorizontalAlignment="Left" Margin="260,217,0,0" Name="RottentomatoesAudienceVotes" VerticalAlignment="Top" Grid.Column="2" />
        <Button Content="IMDB" Grid.Column="2" Height="auto" HorizontalAlignment="Left" Margin="390,87,0,0" Name="imdbLink" VerticalAlignment="Top" Width="auto" FontSize="15" />
        <Button Content="Metacritics" FontSize="15" Height="auto" HorizontalAlignment="Left" Margin="370,167,0,0" Name="metacriticsLink" VerticalAlignment="Top" Width="auto" Grid.Column="2" />
        <Button Content="Rottentomatoes" FontSize="15" Height="auto" HorizontalAlignment="Left" Margin="400,217,0,0" Name="rottentomatoesLink" VerticalAlignment="Top" Width="auto" Grid.Column="2" />
        <TabControl Grid.Column="2" Margin="12,278,12,12" Name="detailsViewTab">
            <TabItem Header="Summery" Name="summeryTab">
                <Grid x:Name="tabControl" Width="auto" Background="#FFF9F9F9">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="2" Header="Details" Margin="5,0" Name="SummeryDetails" FontSize="15" FontWeight="Bold" Height="306" VerticalAlignment="Bottom" Grid.Row="1">
                        <Grid>
                            <StackPanel Margin="0,0,0,0" Name="stackPanel2" Orientation="Vertical" Visibility="Visible" Opacity="1" CanHorizontallyScroll="False" Focusable="False">
                                <StackPanel Height="Auto" Name="stackPanel1" Width="Auto" Orientation="Horizontal">
                                    <Label Content="Runtime:" Height="auto" Width="auto" Name="runtimeLabel" VerticalAlignment="Top" HorizontalAlignment="Left" UseLayoutRounding="False" />
                                    <Label Content="120 min" Height="Auto" Name="runtime" Width="auto" FontWeight="Normal" HorizontalContentAlignment="Right" />
                                </StackPanel>
                                <StackPanel Height="Auto" Name="stackPanel3" Orientation="Horizontal" Width="Auto"></StackPanel>
                                <StackPanel Height="Auto" Name="stackPanel5" Orientation="Horizontal">
                                    <Label Content="Cinema Date:" Height="auto" Width="auto" Name="cinemaDateLabel" />
                                    <Label Content="13.05.2010" Height="auto" Name="cinemaDate" Width="auto" FontWeight="Normal" />
                                </StackPanel>
                                <StackPanel Height="Auto" Name="stackPanel7" Orientation="Horizontal">
                                    <Label Content="Last Seen:" Height="auto" Width="auto" Name="lastSeenLabel" />
                                    <Label Content="16.05.2010" Height="auto" Name="lastSeen" Width="auto" FontWeight="Normal" />
                                </StackPanel>
                                <StackPanel Height="Auto" Name="stackPanel4" Orientation="Horizontal" Width="Auto">
                                    <Label Content="MPAA:" Height="auto" Width="auto" Name="mpaaLabel" />
                                    <Label Content="R" Height="auto" Name="mpaa" Width="auto" FontWeight="Normal" />
                                </StackPanel>
                                <StackPanel Height="Auto" Name="stackPanel6" Orientation="Horizontal">
                                    <Label Content="Seen:" Height="auto" Width="auto" Name="seenLabel" />
                                    <Label Content="3" Height="auto" Name="seen" Width="auto" FontWeight="Normal" />
                                </StackPanel>
                                <StackPanel Height="Auto" Name="stackPanel8" Orientation="Horizontal">
                                    <Label Content="Awards:" Height="auto" Width="auto" Name="awardsLabel" />
                                    <Label Content="3" Height="auto" Name="awards" Width="45" FontWeight="Normal" />
                                </StackPanel>
                                <StackPanel Height="Auto" Name="stackPanel9" Orientation="Horizontal">
                                    <Label Content="Production Budget:" Height="auto" Width="auto" Name="productionBudgetLabel" />
                                    <Label Content="150 mio" Height="auto" Name="budget" Width="auto" FontWeight="Normal" />
                                </StackPanel>
                                <StackPanel Height="Auto" Name="stackPanel10" Orientation="Horizontal">
                                    <Label Content="Boxoffice:" Height="auto" Width="auto" Name="boxofficeLabel" />
                                    <Label Content="502.675.435" Height="auto" Name="boxxoffice" Width="auto" FontWeight="Normal" />
                                </StackPanel>
                                <StackPanel Height="Auto" Name="stackPanel11" Orientation="Horizontal">
                                    <Label Content="Language:" Height="auto" Width="auto" Name="LanguageLabel" />
                                    <Label Content="German" Height="auto" Name="language" Width="auto" FontWeight="Normal" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    <GroupBox FontSize="15" FontWeight="Bold" Header="Plot" Margin="5,5,5,312" Name="SummeryPlot" Grid.Column="2" Height="auto" Grid.RowSpan="2">
                        <Grid Width="auto" Height="auto">
                            <TextBlock Margin="0,0,0,0" Name="plot" TextWrapping="Wrap" FontWeight="Normal" />
                        </Grid>
                    </GroupBox>
                    <GroupBox FontSize="15" FontWeight="Bold" Header="Stars" Name="SummeryStars" Grid.Row="1" Margin="0,0,5,0">
                        <Grid>
                            <ListBox ClipToBounds="True" Margin="0,0,0,0" Name="SummeryStarsListbox"></ListBox>
                        </Grid>
                    </GroupBox>
                    <GroupBox FontSize="15" FontWeight="Bold" Header="Production" Margin="0,0,5,0" Name="SummeryProduction">
                        <Grid>
                            <ListBox ClipToBounds="True" Margin="0,0,0,0" Name="SummeryProductionListbox" />
                        </Grid>
                    </GroupBox>
                    <GroupBox FontSize="15" FontWeight="Bold" Header="Additional Information" Margin="15,5,10,0" Name="SummeryAdditionalInformation" Grid.Column="3">
                        <Grid></Grid>
                    </GroupBox>
                    <GroupBox FontSize="15" FontWeight="Bold" Header="Notes" Margin="15,5,10,0" Name="SummeryNotes" Grid.Column="3" Grid.Row="1">
                        <Grid>
                            <Grid Margin="0,0,0,0">
                                <RichTextBox Margin="0,0,0,0" Name="SummeryNoteTextbox" IsReadOnly="True" />
                            </Grid>
                        </Grid>
                    </GroupBox>
                    <GridSplitter Grid.Column="1" Grid.RowSpan="2" Margin="0,0,0,0" Name="gridSplitter1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#FFF9F9F9" />
                </Grid>
            </TabItem>
            <TabItem Header="Enhanced" Name="enancedTab">
                <Grid Width="auto">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <GroupBox FontSize="15" FontWeight="Bold" Header="Seen" Height="179" Margin="10,10,10,0" Name="EnhancedSeen" VerticalAlignment="Top">
                        <Grid>
                        </Grid>
                    </GroupBox>
                    <GroupBox FontSize="15" FontWeight="Bold" Header="Added" Height="170" Margin="10,10,10,0" Name="EnhancedAdded" VerticalAlignment="Top" Grid.Column="1">
                        <Grid>
                        </Grid>
                    </GroupBox>
                    <GroupBox FontSize="15" FontWeight="Bold" Header="Awards" Height="56" Margin="10,200,10,0" Name="EnhancedAwards" VerticalAlignment="Top">
                        <Grid>
                            <Label Content="Won 4 Oscars. Another 63 wins and 92 nominations" HorizontalAlignment="Left" Margin="5,0,0,0" Name="awardsOverview" FontWeight="Normal" />
                        </Grid>
                    </GroupBox>
                    <GroupBox FontSize="15" FontWeight="Bold" Header="Also Known As" Margin="10,262,16,6" Name="EnhancedAlsoKnownAs">
                        <Grid></Grid>
                    </GroupBox>
                    <GroupBox FontSize="15" FontWeight="Bold" Header="Recommendations" Height="250" Margin="10,200,10,0" Name="EnhancedRecommendations" VerticalAlignment="Top" Grid.Column="1">
                        <Grid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Cast" Name="castTab">
                <Grid Height="auto" Width="auto" />
            </TabItem>
            <TabItem Header="Boxoffice" Name="boxofficeTab">
                <Grid Height="387" Width="299" />
            </TabItem>
            <TabItem Header="Awards" Name="awardsTab"></TabItem>
            <TabItem Header="Pictures" Name="picturesTab">
                <Grid Height="387" Width="299" />
            </TabItem>
        </TabControl>      
        <GroupBox Header="Lists - Unseen" Margin="5" Name="ListGroup" FontSize="15" FontWeight="Bold">
            <Grid>
                <Menu Height="23" Margin="1,0,0,0" Name="listMenu" VerticalAlignment="Top">
                    <MenuItem x:Name="addMovie" Header="Add"/>
                    <MenuItem x:Name="deleteMovie" Header="Delete"/>
                    <MenuItem x:Name="searchMovie" Header="Search"/>
                    <MenuItem x:Name="playMovie" Header="Play"/> 
                </Menu>
                <TextBox Height="30" Margin="5,30,50,0" Name="searchBox" VerticalAlignment="Top" Text="(Search)" />
                <Button Content="Search" Height="auto" HorizontalAlignment="Right" Margin="0,34,6,0" Name="searchButton" VerticalAlignment="Top" Width="auto" FontWeight="Normal" FontSize="10" />
                <ListBox Margin="5,71,5,5" Name="listBoxMovies" SelectionChanged="listBoxMovies_SelectionChanged" />
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
