<Window x:Class="WinMovieRack.GUI.LoadScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoadScreen" Width="500" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Label Content="Movie Rack rockxxx" HorizontalAlignment="Center" Name="label1" VerticalAlignment="Center" FontSize="20" Margin="20" />
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <ProgressBar Margin="10" Grid.Row="1" Height="24" HorizontalAlignment="Stretch" Name="bar" VerticalAlignment="Top" />
            <Label Content="current" HorizontalAlignment="Stretch" Name="label2" Width="auto" FontSize="13" Margin="10,1, 10, 10" />
        </StackPanel>
    </Grid>
</Window>
