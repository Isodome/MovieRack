<UserControl x:Class="WinMovieRack.GUI.MovieRackListBoxItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <Grid Height="auto" Width="auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image x:Name="imageMovie" Height="82" HorizontalAlignment="Stretch" Margin="6" Stretch="Fill" VerticalAlignment="Stretch" Width="68" />
        <Label Content="Title/Name" Grid.Column="1" Height="auto" Width="auto" HorizontalAlignment="Stretch" Margin="0,12,6,0" Name="labelMovieTitle" VerticalAlignment="Top" FontWeight="Bold" FontSize="15" />
        <Label Content="Year/Charakter" Grid.Column="1" Height="auto" HorizontalAlignment="Stretch" Margin="0,38,6,0" Name="labelMovieYear" VerticalAlignment="Top" FontSize="13" />
        <Label Content="Editable/Age" Grid.Column="1" Height="auto" HorizontalAlignment="Stretch" Margin="0,64,6,0" Name="labelMovieEditable" VerticalAlignment="Top" FontSize="13" />
    </Grid>
</UserControl>
