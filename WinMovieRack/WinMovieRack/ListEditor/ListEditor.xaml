<Window x:Class="WinMovieRack.ListEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ListEditor" Height="317" Width="410" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Content="Hinzufügen" Height="auto" Width="auto" Name="addButton" VerticalAlignment="top" Margin="28,12,34,0" />
        <Button Content="Bearbeiten" Height="auto" Width="auto" Name="editButton" VerticalAlignment="top" Margin="26,12,32,0" Grid.Column="1" />
        <Button Content="Entfernen"  Height="auto" Width="auto" Name="deleteButton" VerticalAlignment="Top" Grid.Column="2" Margin="30,12,24,0" />
        <ListBox Grid.ColumnSpan="3" Grid.Row="1" HorizontalAlignment="Stretch" Margin="12,12,12,12" Name="listBox" VerticalAlignment="Stretch" Width="auto" Height="auto" />
    </Grid>
</Window>
